  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/cmake:1": {},
    "ghcr.io/devcontainers/features/llvm:1": {},
    "ghcr.io/devcontainers/features/node:1": {
